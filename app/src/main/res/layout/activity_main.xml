<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/starswar"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:background="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/image"
            app:layout_constraintEnd_toEndOf="@+id/image"
            app:layout_constraintHorizontal_bias="0.053"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.923" />

        <TextView
            android:id="@+id/genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/genre"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/image"/>

        <TextView
            android:id="@+id/desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/desc"
            android:layout_marginEnd="11dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/genre"
            app:layout_constraintTop_toBottomOf="@+id/genre"/>

        <TextView
            android:id="@+id/title_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_release"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/desc"
            app:layout_constraintTop_toBottomOf="@+id/desc"/>

        <TextView
            android:id="@+id/release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:text="@string/release"
            app:layout_constraintStart_toEndOf="@+id/title_release"
            app:layout_constraintTop_toTopOf="@+id/title_release" />

        <TextView
            android:id="@+id/title_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_director"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/title_release"
            app:layout_constraintTop_toBottomOf="@+id/title_release"/>

        <TextView
            android:id="@+id/director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="66dp"
            android:text="@string/director"
            app:layout_constraintStart_toEndOf="@+id/title_director"
            app:layout_constraintTop_toTopOf="@+id/title_director" />

        <TextView
            android:id="@+id/title_cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_cast"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/title_director"
            app:layout_constraintTop_toBottomOf="@+id/title_director"/>

        <TextView
            android:id="@+id/cast"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:text="@string/cast"
            app:layout_constraintStart_toEndOf="@+id/title_cast"
            app:layout_constraintTop_toTopOf="@+id/title_cast" />

        <TextView
            android:id="@+id/title_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@string/title_budget"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/title_cast"
            app:layout_constraintTop_toBottomOf="@+id/title_cast" />

        <TextView
            android:id="@+id/budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:text="@string/budget"
            app:layout_constraintStart_toEndOf="@+id/title_budget"
            app:layout_constraintTop_toTopOf="@+id/title_budget" />

        <TextView
            android:id="@+id/title_dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_dist"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/title_budget"
            app:layout_constraintTop_toBottomOf="@+id/title_budget"/>

        <TextView
            android:id="@+id/dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="@string/dist"
            app:layout_constraintStart_toEndOf="@+id/title_dist"
            app:layout_constraintTop_toTopOf="@+id/title_dist" />

        <TextView
            android:id="@+id/title_based"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_based"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/title_dist"
            app:layout_constraintTop_toBottomOf="@+id/title_dist"/>

        <TextView
            android:id="@+id/based"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:text="@string/based"
            app:layout_constraintStart_toEndOf="@+id/title_based"
            app:layout_constraintTop_toTopOf="@+id/title_based" />

        <include
            layout="@layout/detail_layout"
            android:layout_width="0dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/based" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>